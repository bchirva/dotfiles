(defpoll keyboard_layout 
    :initial ""
    :interval "100ms"
    "scripts/keyboard.sh active")

(defwidget keyboard_button [] 
    (button 
        :class "fill"
        :hexpand false 
        :onclick "scripts/keyboard.sh next" 
        "${keyboard_layout}"
    )
)

(defwidget keyboard_control []
    (iconed_button 
        :icon "ï„œ"
        :label "${keyboard_layout}"
        :action "scripts/keyboard.sh next"
    )
)
