# Terminal emulator
super + Return
    $TERMINAL 

# Launcher
super + shift + space 
    rofi -modi drun -show drun

alt + Tab
    rofi -modi window -show window

#~~~~~ System control ~~~~~#

super + c
    rofi-master

super + ctrl + a
    rofi-audio-ctrl output

super + ctrl + b
    rofi-bluetooth-ctrl main

super + ctrl + m
    rofi-audio-ctrl input

super + ctrl + n
    rofi-network-ctrl main

super + ctrl + q
    rofi-powermenu 

super + ctrl + v
    AmneziaVPN

#~~~~~ Application start ~~~~~#

super + Print
    rofi-screen-capture

super + p
    rofi-passwords

super + space ; o
    obsidian %U

super + space ; s
    $TERMINAL -e btm

super + space ; t
    Telegram -- %u

super + space ; v
    virt-manager

super + space ; w
    $BROWSER

super + space ; z
    zathura

#~~~~~ Music ~~~~~#
super + m ; m
    rofi-music

super + m ; space
    mpc toggle

super + m ; n
    mpc next

super + m ; p
    mpc prev
