#!/usr/bin/env sh

weather_icon(){
    case $1 in
        "01d") echo "" ;;
        "02d") echo "" ;;
        "03d") echo "" ;;
        "04d") echo "" ;;
        "09d") echo "" ;;
        "10d") echo "" ;;
        "11d") echo "" ;;
        "13d") echo "" ;;
        "50d") echo "" ;;
        "01n") echo "" ;;
        "02n") echo "" ;;
        "03n") echo "" ;;
        "04n") echo "" ;;
        "09n") echo "" ;;
        "10n") echo "" ;;
        "11n") echo "" ;;
        "13n") echo "" ;;
        "50n") echo "" ;;
        *)     echo "n/a" ;;
    esac
}

weather_json() {
    weather=$(curl -s "api.openweathermap.org/data/2.5/weather?q=Yekaterinburg,ru&units=metric&appid=$OPENWEATHER_KEY")
    icon=$(weather_icon "$(printf '%s' "${weather}" | jq ".weather[].icon" | sed "s/\"//g")")

    printf '%s' "${weather}" \
        | jq --arg icon "$icon" '(.main.temp | round) as $tmp | 
        {
            temp: (if $tmp > 0 then "+" + ($tmp|tostring) else $tmp|tostring end),
            description: .weather[].main,
            detailed: .weather[].description,
            icon: $icon,
            wind: .wind.speed,
            humidity: .main.humidity
        }'
}

weather_json
